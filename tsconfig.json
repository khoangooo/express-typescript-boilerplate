{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src/index.ts",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src"]
}
